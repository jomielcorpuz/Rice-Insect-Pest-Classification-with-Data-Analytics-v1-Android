<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    tools:context=".camera_gallery">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/green"
        app:navigationIcon="?attr/homeAsUpIndicator">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="323dp"
        android:layout_height="123dp"
        android:src="@drawable/insect"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/input_bg1"
            android:backgroundTint="#2B6D2D"
            android:drawableLeft="@drawable/baseline_photo_camera_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="80dp"
            android:paddingBottom="25dp"
            android:text="Camera"
            android:textColor="@color/white"
            android:textSize="30sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/GalleryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/input_bg1"
            android:backgroundTint="#E47A1C"
            android:drawableLeft="@drawable/baseline_image_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="80dp"
            android:paddingBottom="25dp"
            android:text="Gallery"
            android:textColor="@color/white"
            android:textSize="30sp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ToolBar"
                android:layout_marginStart="20dp"
                android:text="Current Location: "
                android:textColor="@color/black"
                android:textSize="15dp"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/currentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ToolBar"
            android:text="Loading... "
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:textSize="15dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ToolBar"
                android:layout_marginStart="20dp"
                android:text="Longitude: "
                android:textColor="@color/black"
                android:textSize="15dp"

                />
            <TextView
                android:id="@+id/currentLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ToolBar"
                android:text="Loading... "
                android:textColor="@color/black"
                android:textSize="15dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ToolBar"
                android:layout_marginStart="20dp"
                android:text="Latitude: "
                android:textColor="@color/black"
                android:textSize="15dp"

                />
            <TextView
                android:id="@+id/currentLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ToolBar"
                android:text="Loading... "
                android:textColor="@color/black"
                android:textSize="15dp"

                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>